{
    "manifest_version": 3,
    "name": "Rollup-React-TS-Extension",
    "version": "0.0.1",
    "description": "Extension dedicated to learn extensions with Rollup and React",
    "author": "mtjkapral@protonmail.com",
    "icons": {
        "16": "brain.png",
        "48": "brain.png",
        "128": "brain.png"
    },
    "action": {
        "default_title": "Hello there! Ahh General Kenobi",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "notifications",
        "background",
        "tabCapture",
        "tabs",
        "activeTab",
        "storage",
        "downloads",
        "tts",
        "system.cpu",
        "system.storage",
        "system.memory",
        "system.display",
        "power",
        "printerProvider"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}