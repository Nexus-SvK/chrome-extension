{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "lib": [
            "dom",
            "es6"
        ],
        "jsx": "react",
        "noEmit": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "dist",
        "node_modules",
    ],
    "typeRoots": [
        "./node_modules/@rollup/plugin-html/types"
    ],
    "types": [
        "node",
    ]
}