    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",                     
        "lib": ["dom", "es6"],                       
        "jsx": "react",                         
        "noEmit": true,                       
        "strict": true,                        
        "moduleResolution": "node",              
        "allowSyntheticDefaultImports": true,    
